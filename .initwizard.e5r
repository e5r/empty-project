{
    "message": [
        " _ _ _  _                  _",
        "| | | |<_>.___ ___  _ _  _| |",
        "| | | || | / /<_> || '_>/ . |",
        "|__/_/ |_|/___<___||_|  \\___|",
        "",
        "-----------------------------------------",
        "E5R Development Team - New Project v1.0.0",
        "-----------------------------------------"
    ],
    "properties": [
        {
            "name": "name",
            "default": "{% 'project_' + builtin.folderName %}"
        },
        {
            "name": "description",
            "default": "A empty project.\n  Created on: {% builtin.year %}/{% builtin.month %}/{% builtin.day %}"
        },
        {
            "name": "version",
            "default": "1.0.0",
            "match": "^([0-9]{1,2}).([0-9]{1,2}).([0-9]{1,2})$"
        },
        {
            "name": "author",
            "default": "E5R Development Team"
        },
        {
            "name": "license",
            "default": "Apache-2.0"
        },
        {
            "title": "Use E5R Development Tool?",
            "name": "useDev",
            "default": "yes",
            "options": [
                "yes",
                "no"
            ]
        }
    ],
    "excludes": [
        {
            "path": ".gitignore",
            "if": "always"
        },
        {
            "path": "_builder/dev",
            "if": "wizard.useDev !== true"
        }
    ]
}